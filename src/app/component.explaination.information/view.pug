.row
    span DATA Information
.row
    .metadata
        table.table.board-table
            tbody
                tr(style="border-top:1px solid rgba(94,104,118,0.16)")
                    th 데이터셋 명
                    td {{list.title}} 데이터셋
                    th 데이터 분류
                    td {{list.category}} 데이터셋
                tr
                    th 생성날짜
                    td {{list.created}}
                    th 수정날짜
                    td {{list.updated}}
                tr
                    th 데이터 수집기간
                    td
                        .wrap-text.pl-0
                            .btn.btn-sm.mr-1(*ngFor="let year of list.period;let i = index", style="border-radius:5px;") {{year}}
                    th 데이터 건수
                    td {{file_rows}}
                tr
                    th 데이터 유형
                    td {{list.filetype}}
                    th 키워드
                    td
                        .wrap-text.pl-0
                            .btn.btn-sm.mr-1(*ngFor="let tag of list.tags;let i = index", style="border-radius:5px;") {{tag}}
                tr
                    th 내용
                    td(colspan='3') {{list.summary}}
                tr
                    th 공개 여부
                    td {{list.visibility}}
                    th 식별화 여부
                    td {{list.identification}}
                tr
                    th 데이터 가공 유형
                    td 원천
                    th 데이터 관리 기관
                    td {{ list.department !== '미분류' ? list.department : '-' }}
                tr
                    th 주 관리자
                    td {{list.main_manager_name}} ({{list.main_manager_email}})
                    th 부 관리자
                    td(*ngIf="list.sub_manager_name") {{list.sub_manager_name}} ({{list.sub_manager_email}})
                    td(*ngIf="!list.sub_manager_name") - 