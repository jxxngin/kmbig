    // #offcanvas-create.offcanvas.offcanvas-end.offcanvas-xl(tabindex="-1", aria-labelledby="offcanvasRightLabel")
    .offcanvas.offcanvas-end.show([class.show]="tab", tabindex="-1")
        .offcanvas-header
            h5#offcanvasRightLabel.offcanvas-title 다운로드 하기
            button.btn-close((click)="close()", type="button", data-bs-dismiss="offcanvas", aria-label="Close")
        
        .offcanvas-body
            .form-group.row.mb-3
                label.form-label.col-3.col-form-label.required Dataset List
                .col
                    input.form-control(type="text", placeholder="Dataset List")

            .form-group.row.mb-3
                label.form-label.col-3.col-form-label Dataset Download
                .col
                    textarea.form-control(placeholder="Dataset Download", rows=5)
                    
            .text-right
                button.btn.kmbig-btn-orange(style="border-radius: 16px;", type="button")
                    span Download

.loading-wrap(*ngIf="_loading")
    wiz-component-loading-hexa()